@using WordCounter.Models;

<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>Word Counter</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css'>
</head>
<body>
  <div class="container">
    <div class="jumbotron">
      <h1>Word Counter</h1>
    </div>
    <div>
      <p>The word @Model.GetWord() appears @Model.AddWordMatches() times in the sentence:</p>
      <br>
      <p>@Model.GetSentence()</p>
      <br>
      <a href="/wordcounter/new" class="btn btn-dark">Try again</a>
      <a href='/' class="btn btn-dark">Back to home</a>
    </div>
  </div>
</body>
</html>

